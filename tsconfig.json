{
  "extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"build/**/*.ts",
		"mock/**/*.ts",
    "src/**/*",
		"src/**/*.vue",
		"typings/**/*.d.ts",
		"vite.config.*",
	],
	"exclude": [
		"/dist/**",
		"node_modules",
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"/~/*": ["./*"],
			"/@/*": ["./src/*"],
      "/#/*": ["./typings/*"],
		},
		"types": [
      "node",
    ],
	},
}
